<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editStats">

    <Button
        android:id="@+id/menu"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/highScore"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="High Score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lowScore"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Low Score"
        app:layout_constraintStart_toStartOf="@+id/highScore"
        app:layout_constraintTop_toBottomOf="@+id/highScore" />

    <Button
        android:id="@+id/highAverage"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Highest Average"
        app:layout_constraintStart_toStartOf="@+id/lowScore"
        app:layout_constraintTop_toBottomOf="@+id/lowScore" />

    <Button
        android:id="@+id/mostPoints"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Most Points"
        app:layout_constraintStart_toStartOf="@+id/highAverage"
        app:layout_constraintTop_toBottomOf="@+id/highAverage" />

    <Button
        android:id="@+id/mostGames"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text=" Most Games"
        app:layout_constraintStart_toStartOf="@+id/mostPoints"
        app:layout_constraintTop_toBottomOf="@+id/mostPoints" />

    <TextView
        android:id="@+id/message"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Stats Go Here"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mostGames" />
</android.support.constraint.ConstraintLayout>