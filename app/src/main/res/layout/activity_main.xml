<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addPlayer"
        android:layout_width="316dp"
        android:layout_height="68dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorAccent"
        android:text="Add new player"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/record"
        android:layout_width="316dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Record new game stats"
        app:layout_constraintStart_toStartOf="@+id/addPlayer"
        app:layout_constraintTop_toBottomOf="@+id/addPlayer" />

    <Button
        android:id="@+id/highScore"
        android:layout_width="316dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:background="@color/design_default_color_primary"
        android:text="High Scores"
        app:layout_constraintStart_toStartOf="@+id/record"
        app:layout_constraintTop_toBottomOf="@+id/record" />

    <Button
        android:id="@+id/viewStats"
        android:layout_width="316dp"
        android:layout_height="68dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="View stats"
        app:layout_constraintStart_toStartOf="@id/highScore"
        app:layout_constraintTop_toBottomOf="@+id/highScore" />

    <Button
        android:id="@+id/editStats"
        android:layout_width="316dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:background="@color/design_default_color_primary_dark"
        android:text="Edit Stats"
        app:layout_constraintStart_toStartOf="@+id/viewStats"
        app:layout_constraintTop_toBottomOf="@+id/viewStats" />

</android.support.constraint.ConstraintLayout>